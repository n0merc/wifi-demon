FROM kalilinux/kali-rolling

# Install dependencies
RUN apt update && apt install -y \
    python3 \
    python3-pip \
    aircrack-ng \
    wireless-tools \
    net-tools \
    iw \
    ethtool \
    rfkill \
    hashcat \
    hcxdumptool \
    hcxtools \
    macchanger \
    hostapd \
    dnsmasq \
    lighttpd \
    php-cgi \
    php-xml \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip3 install colorama scapy netifaces requests beautifulsoup4 lxml

# Clone WiFi-Demon
RUN git clone https://github.com/n0merc/wifi-demon.git /opt/wifi-demon

# Set working directory
WORKDIR /opt/wifi-demon

# Make script executable
RUN chmod +x wifi_demon.py

# Entry point
ENTRYPOINT ["python3", "wifi_demon.py"]
